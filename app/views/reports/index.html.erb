
<%= form_tag reports_path(), :method => :GET do %>
  <fieldset>
    <div class="form-group">
      <div class="row">
        <div class="colspan-4">
          <label class="control-label" for="from" style="padding-right:5px;"><%= t('search.from') %></label>
          <input type="text" class="form-control" name="from" id="from" >
        </div>
        <div class="colspan-4">
          <label class="control-label" for="to" style="padding-right:5px;"><%= t('search.to') %></label>
          <input type="text" class="form-control" name="to" id="to" >
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="colspan-4">
          <label class="control-label" for="phone_number" style="padding-right:5px;"><%= t('search.phone_number') %></label>
        <input type="text" class="form-control" name="phone_number" id="phone_number">
        </div>
      </div>
      
    </div>
    <div class="form-group">
      <div class="row">
        <div class="colspan-4">
          <label class="control-label" for="location" style="padding-right:5px;"><%= t('search.location') %></label>
          <input type="text" class="form-control" name="location" id="location">
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="colspan-4">
          <button type="subm" class="btn btn-success"><%= t('search.search') %></button>
        </div>
      </div>
    </div>
  </fieldset>
<% end %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th><%= t('index.date') %></th>
      <th><%= t('index.phone_number') %></th>
      <th><%= t('index.audio') %></th>
      <th><%= t('index.message') %></th>
      <th><%= t('index.symptom') %></th>
      <th><%= t('index.location') %></th>                                          
    </tr>
  </thead>   
  <tbody>
    <% if @reports.size > 0 %>
      <% @reports.each do |report| %>
        <tr>
          <td><%= show_readable_date(report["created_at"]) %></td>
          <td><%= report["address"] %></td>
          <td>
            <audio controls>
              <source src="<%= audio_path(report)%>" type="audio/mpeg">
            </audio>
          </td>
          <td><%= report["message"] %></td> 
          <td><%= description_detail(report["properties"]) %></td>
          <td><%= report["location"] %></td>                           
        </tr> 
      <% end %>  
    <% else %>
      <tr>
        <td colspan="6" align="center">No Data</td>
    <% end %>                 
  </tbody>
</table>
<%= will_paginate @reports %>
<script type="text/javascript">
  $(function () {
    $('#from').datepicker({format: "dd/mm/yyyy"});
    $('#to').datepicker({format: "dd/mm/yyyy"});
  });
</script>

